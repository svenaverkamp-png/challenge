{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "EverVoice",
  "version": "1.0.0",
  "identifier": "com.evervoice.app",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "EverVoice",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "visible": false,
        "center": true
      }
    ],
    "trayIcon": {
      "id": "main",
      "iconPath": "icons/tray-idle.png",
      "iconAsTemplate": true,
      "tooltip": "EverVoice - Bereit"
    },
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self' data:; connect-src 'self' ipc: http://ipc.localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "entitlements": "entitlements.plist",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "EverVoice benötigt Mikrofon-Zugriff für die Sprachaufnahme und Transkription.",
        "NSAppleEventsUsageDescription": "EverVoice benötigt Zugriff für globale Tastenkombinationen."
      }
    }
  },
  "plugins": {
    "autostart": {
      "macOSLaunchAgent": true,
      "args": ["--minimized"]
    }
  }
}
